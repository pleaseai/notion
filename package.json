{
  "name": "notion-cli",
  "type": "module",
  "version": "0.3.1",
  "description": "Notion CLI - Manage Notion from the command line",
  "author": "Minsu Lee",
  "license": "MIT",
  "keywords": [
    "notion",
    "cli",
    "api",
    "productivity",
    "automation"
  ],
  "bin": {
    "notion": "./src/index.ts"
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build src/index.ts --compile --outfile dist/notion",
    "test": "bun test",
    "test:unit": "bun test test/",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@byjohann/toon": "^0.4.1",
    "@notionhq/client": "^2.2.14",
    "@pleaseai/cli-toolkit": "^0.2.0",
    "commander": "^14.0.1",
    "es-toolkit": "^1.41.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.0.0",
    "@types/bun": "^1.3.0",
    "@types/node": "^22.10.2",
    "eslint": "^9.37.0",
    "eslint-plugin-format": "^1.0.2",
    "ts-pattern": "^5.9.0",
    "typescript": "^5.7.2"
  }
}
